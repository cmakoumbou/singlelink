<% if !@cards.empty? %>
  <table class="ui single line table">
    <thead>
      <tr><th colspan="6">
        Your cards
      </th>
    </tr></thead>
    <tbody>
      <% @cards.each do |card| %>
        <tr>
          <td class="center aligned"><%= link_to card.title, card.url, :target => "_blank" %></td>
          <td><%= link_to 'Up', move_up_card_path(card), :method => :put, class: "ui fluid black basic button" %></td>
          <td><%= link_to 'Down', move_down_card_path(card), :method => :put, class: "ui fluid black basic button" %></td>
          <% if card.disable == false %>
            <td><%= link_to 'Disable', disable_card_path(card), :method => :post, class: "ui fluid black basic button" %></td>
          <% else %>
            <td><%= link_to 'Enable', enable_card_path(card), :method => :post, class: "ui fluid black basic button" %></td>
          <% end %>
          <td><%= link_to 'Edit', edit_card_path(card), class: "ui fluid black basic button" %></td>
          <td><%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure you want to delete this card?' }, class: "ui fluid black basic button" %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr><th colspan="6">
        <% if can? :new, Card %>
          <%= link_to 'Add new card', new_card_path, class: "ui primary button" %>
        <% else %>
          <%= link_to '30 Cards limit reached', new_card_path, class: "ui right floated disabled button" %>
        <% end %>
      </th>
    </tr></tfoot> 
  </table>
<% else %>
  <table class="ui single line table">
    <thead>
      <tr><th colspan="6">
        Your cards
      </th>
    </tr></thead>
    <tbody>
    </tbody>
    <tfoot>
      <tr><th colspan="6">
        <% if can? :new, Card %>
          <%= link_to 'Add new card', new_card_path, class: "ui primary button" %>
        <% end %>
      </th>
    </tr></tfoot>  
  </table>
<% end %>