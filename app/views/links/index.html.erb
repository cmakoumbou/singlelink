<div class="panel panel-default">
  <div class="panel-heading">Home</div>
  <div class="panel-body">
    <%= link_to 'Add a new link', new_link_path, class: "btn btn-default btn-block" %>
    <br />
    <div class="panel panel-default">
      <div class="panel-heading">Manage your links</div>
      <table class="table table-bordered table-hover">
        <tbody>
          <% @links.each do |link| %>
            <tr>
              <td class="col-xs-1 col-md-1 text-center">
                <%= link_to move_up_link_path(link), :method => :post do %>
                  <span class="glyphicon glyphicon-arrow-up"></span><br />
                <% end %>
                &bull;</span><br />
                <%= link_to move_down_link_path(link), :method => :post do %>
                  <span class="glyphicon glyphicon-arrow-down"></span>
                <% end %>
              </td>
              <td class="col-xs-7 col-md-9"><%= link_to link.url, link.url, :target => "_blank" %></td>
              <td class="col-xs-2 col-md-1"><%= link_to 'Edit', edit_link_path(link) %></td>
              <td class="col-xs-2 col-md-1"><%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>