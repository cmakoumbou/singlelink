<% provide(:title, "Edit link") %>

<%= form_for(@link) do |f| %>
	<%= link_error_messages! %>
	<%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_field :url, placeholder: "Link" %>
  <%= image_tag(@link.image_url) if @link.image? %>
  <%= f.file_field :image %>
  <%= f.submit "Update link" %>
<% end %>

<%= link_to('Go back', root_path) %>