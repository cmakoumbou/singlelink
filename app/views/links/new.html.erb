<% provide(:title, "New link") %>
<div class="row">
  <%= render 'layouts/welcome' %>
  <div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
		  <div class="panel-heading">New link</div>
		  <div class="panel-body">
				<%= form_for(@link) do |f| %>
				  <%= link_error_messages! %>

				  <div class="form-group">
				    <%= f.text_field :url, placeholder: "Link", class: "form-control" %>
				  </div>
				  
				  <div class="actions">
				    <%= f.submit "Create link", class: "btn btn-default btn-block" %>
				  </div>
				<% end %>
			</div>
			<div class="panel-footer">
      	<%= link_to('Go back', root_path) %>
      </div>
		</div>
	</div>
</div>