<% if !@links.empty? %>
  <div class="ui four link doubling stackable cards">
    <% @links.each do |link| %>
      <% if link.disable == false %>
        <%= link_to link.url, class: "card", :target => "_blank" do %>
          <div class="image">
            <%= image_tag link.image_url %>
          </div>
          <div class="content">
            <div class="ui centered header"><%= link.title %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% else %>
  No links
<% end %>

<% if !@user.display_name.blank? %>
  <h2 class="ui header"><%= @user.display_name %></h2>
<% else %>
  <h2 class="ui header"><%= @user.username %></h2>
<% end %>

<% if !@user.bio.blank? %>
  <p><%= @user.bio %></p>
<% end %>

<div class="ui divider"></div>