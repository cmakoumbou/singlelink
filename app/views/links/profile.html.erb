<% if !@user.display_name.blank? %>
  <% provide(:title, "#{@user.display_name}") %>
<% else %>
  <% provide(:title, "#{@user.username}") %>
<% end %>


<div class="ui items">
  <div class="item">
    <div class="ui small rounded image">
      <%= image_tag @user.avatar.thumb.url %>
    </div>
    <div class="middle aligned content">
      <div class="header">
        <% if !@user.display_name.blank? %>
          <%= @user.display_name %> 
        <% else %>
          <%= @user.username %> 
        <% end %>
      </div>
      <div class="meta">
        <span><%= link_to request.original_url, request.original_url %></span>
      </div>
      <div class="description">
        <p><%= @user.bio %></p>
      </div>
    </div>
  </div>
</div>

<div class="ui hidden divider"></div>


<% if !@links.empty? %>
  <div class="ui four link doubling stackable cards">
    <% @links.each do |link| %>
      <% if link.disable == false %>
        <%= link_to link.url, class: "card", :target => "_blank" do %>
          <% if link.default_image.present? && link.image.blank? %>
            <div id="<%= link.default_image %>" class="image">
              <%= image_tag link.default_image + ".png" %>
            </div>
          <% else %>
            <div class="image">
              <%= image_tag link.image.thumb.url %>
            </div>
          <% end %>
          <div class="content">
            <div class="ui centered header"><%= link.title %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>