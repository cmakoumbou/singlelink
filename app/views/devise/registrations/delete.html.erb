<% provide(:title, "Cancel") %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { confirm: "Are you sure?" }, html: { method: :delete }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current password" %><br />
  <%= f.submit "Cancel your account" %>
<% end %>

<%= link_to('Go back', settings_path) %>
