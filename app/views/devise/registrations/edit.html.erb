<% provide(:title, "Settings") %>
<div class="row">
  <%= render 'layouts/welcome' %>
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><b>Settings</b></div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

            <div class="panel panel-default">
            <div class="panel-heading">Change your profile details</div>
            <div class="panel-body">
              <div class="form-group">
                <%= f.text_field :display_name, autofocus: true, class: "form-control", placeholder: "Display Name" %>
              </div>

              <div class="form-group">
                <%= f.text_area :bio, class: "form-control", placeholder: "Bio", rows: 3 %>
              </div>
            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">Change your account details</div>
            <div class="panel-body">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">www.singlelink.me/</div>
                  <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
              </div>
            </div>
          </div>
  
          <div class="panel panel-default">
            <div class="panel-heading">Change your password</div>
            <div class="panel-body">
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New password" %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm new password" %>
              </div>
            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">We need your current password to confirm your changes</div>
            <div class="panel-body">
              <div class="form-group">
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Current password" %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "btn btn-default btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        Unhappy? <%= link_to('Cancel your account', settings_cancel_path) %>
      </div>
    </div>
  </div>
</div>