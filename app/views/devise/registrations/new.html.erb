<% provide(:title, "Sign up") %>

<div class="ui three steps">
  <div class="active step">
    <div class="content">
      <div class="title">Create your account</div>
    </div>
  </div>
  <div class="disabled step">
    <div class="content">
      <div class="title">Enter your payment details</div>
    </div>
  </div>
  <div class="disabled step">
    <div class="content">
      <div class="title">Enjoy your free trial</div>
    </div>
  </div>
</div>

<div class="ui segments">
  <div class="ui secondary segment">
    <h4 class="ui header">Sign up - 7 Day Free Trial</h4>
  </div>
  <div class="ui segment">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field <%= "error" if f.object.errors.include?(:username) %>">
        <%= f.label :username, "Username" %>
        <%= f.text_field :username, placeholder: "Username" %>
      </div>
      <div class="field <%= "error" if f.object.errors.include?(:email) %>">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Email" %>
      </div>
      <div class="field <%= "error" if f.object.errors.include?(:password) %>">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password" %>
      </div>
      <div class="field <%= "error" if f.object.errors.include?(:password_confirmation) %>">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %>
      </div>
      <%= f.submit "Sign up", class: "ui primary button" %>
    <% end %>
  </div>
  <div class="ui secondary segment">
    <p>By clicking on "Sign up" above, you are agreeing to our <%= link_to "Terms", terms_path %>.</p>
  </div>
</div>