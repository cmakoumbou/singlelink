<div class="ui items">
  <div class="item">
    <div class="image">
      <%= image_tag @user.avatar.thumb.url %>
    </div>
    <div class="middle aligned content">
      <div style="color: <%= @user.text_colour if @user.text_colour %>" class="header">
        <% if !@user.display_name.blank? %>
          <%= @user.display_name %> 
        <% else %>
          <%= @user.username %> 
        <% end %>
      </div>
      <div style="color: <%= @user.text_colour if @user.text_colour %>" class="meta">
        <span><%= link_to "singlelink.me", root_path %></span>
      </div>
      <div style="color: <%= @user.text_colour if @user.text_colour %>" class="description">
        <p><%= @user.bio %></p>
        <p>Works on computers, mobiles and tablets.</p>
        <p>Â£20 per year.</p>
      </div>
      <div class="extra">
        <%= link_to "Sign up now", new_user_registration_path, class: "ui large right floated primary button" %>
      </div>
    </div>
  </div>
</div>

<div class="ui hidden divider"></div>


<% if !@links.empty? %>
  <div class="ui five link doubling cards">
    <% @links.each do |link| %>
      <% if link.disable == false %>
        <%= link_to link.url, class: "card", :target => "_blank" do %>
          <% if link.default_image.present? && link.image.blank? %>
            <div id="<%= link.default_image %>" class="image">
              <%= image_tag link.default_image + ".png" %>
            </div>
          <% else %>
            <div class="image">
              <%= image_tag link.image.thumb.url %>
            </div>
          <% end %>
          <div class="content">
            <div class="ui centered header"><%= link.title %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>