<%= image_tag("profilepicturehere.jpg", class: "ui small rounded image") %>

<h2 id="mobile_header_margin" class="ui header">
  Your profile name
  <div class="sub header"><%= link_to "singlelink.me/username", root_path, {style: "color: #000000"} %></div>
</h2>
<h3 class="ui header">Your profile bio</h3>

<% if !@links.empty? %>
  <div class="ui two link cards">
    <% @links.each do |link| %>
      <% if link.disable == false %>
        <%= link_to link.url, class: "card", :target => "_blank" do %>
          <% if link.default_image.present? && link.image.blank? %>
            <div id="<%= link.default_image %>" class="image">
              <%= image_tag link.default_image + ".png" %>
            </div>
          <% else %>
            <div class="image">
              <%= image_tag link.image.thumb.url %>
            </div>
          <% end %>
          <div class="content">
            <div class="ui centered header"><%= link.title %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>