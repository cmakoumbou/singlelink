<%= form_tag payola.update_card_path("#{@subscription_guid}") do %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_test_eGtqOr9oXqXZN6IFAfG6plW6"
    data-name="Update Card"
    data-label="Update Card"
    data-panel-label="Update Card"
    data-allow-remember-me="false"
    data-email="<%= current_user.email %>"></script>
<% end %>

<br />

<% if @subscription.plan_id == 1 %>
	<%= render 'payola/subscriptions/change_plan', subscription: @subscription, new_plan: @business_plan, button_class: "btn btn-default" %>
<% elsif @subscription.plan_id == 2 %>
	<%= render 'payola/subscriptions/change_plan', subscription: @subscription, new_plan: @pro_plan, button_text: 'Downgrade Plan', button_class: "btn btn-default" %>
<% end %>

<br />

<%= render 'payola/subscriptions/cancel', subscription: @subscription, button_class: "btn btn-default" %>

<br />

<%= render 'payola/subscriptions/checkout', plan: @pro_plan, email: current_user.email %>