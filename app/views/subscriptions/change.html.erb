<% if Payola::Subscription.where(owner_id: current_user.id).last.plan_id == 1 %>
	<%= render 'payola/subscriptions/change_plan',
    subscription: Payola::Subscription.where(owner_id: current_user.id).last,
    new_plan: SubscriptionPlan.second %>
<% elsif Payola::Subscription.where(owner_id: current_user.id).last.plan_id == 2 %>
	<%= render 'payola/subscriptions/change_plan',
    subscription: Payola::Subscription.where(owner_id: current_user.id).last,
    new_plan: SubscriptionPlan.first, button_text: 'Downgrade Plan' %>
<% end %>

