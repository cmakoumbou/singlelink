<div class="ui segments">
  <div class="ui secondary segment">
    <h4 class="ui header">Your card</h4>
  </div>
  <div class="ui segment">
  	<% if can? :card, Subscription %>
	    <p><b>Billing Card (last 4 digits): </b><%= @user_subscription.last4 %></p>
	  <% end %>
		<%= form_tag card_subscription_path do %>
		  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		          data-name="Update Card"
		          data-email="<%= @user.email%>"
		          data-locale="auto"
		          data-label="Update Card"
		          data-panel-label="Update Card"
		          data-allow-remember-me="false"></script>
		<% end %>
	</div>
</div>